# Format code
[ -f package.json ] && npm pkg fix
git diff --cached --name-only --diff-filter=ACMR -z | xargs -0 prettier --write --ignore-unknown --log-level warn
git update-index --again

# Run code quality checks
pnpm -s run knip
pnpm -s run typecheck
pnpm -s run lint
pnpm -s run fta:check
pnpm -s run test
